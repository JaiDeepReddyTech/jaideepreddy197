package com.jaicode.springdemo;

public class Search {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
int []arr= {30,28,25,23,21,19,17,14,11,8,6,2};
int target=11;
if(search(arr,target)==target) {
	System.out.println("Target value founded : "+target);
}
else {
	System.out.println("Target value not founded : "+target);
}
System.out.println(search(arr,target));
	}
public static int search(int []arr, int target) {
	int start=0;
	int end=arr.length-1;
	while(start<=end) {
		int mid=start+(end-start)/2;
		if(target==arr[mid]) {
			return mid;
		}
		boolean asn=arr[start]<arr[end];
		if(asn) {
			if(target>arr[mid]) {
				start=mid+1;
			}
			else {
				end=mid-1;
			}
		}
		else {
			if(target>arr[mid]) {
				end=mid-1;
			}
			else {
				start=mid+1;
			}
		}
	}
	return -1;
}
}